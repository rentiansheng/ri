{
  "appId": "com.ri.app",
  "productName": "RI",
  "directories": {
    "buildResources": "build",
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json",
    "node_modules/node-pty/**/*"
  ],
  "asar": true,
  "asarUnpack": [
    "node_modules/node-pty"
  ],
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": [
      "dmg",
      "zip"
    ],
    "icon": "build/icon.icns"
  },
  "win": {
    "target": [
      "nsis",
      "portable"
    ],
    "icon": "build/icon.ico"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "category": "Development"
  }
}
