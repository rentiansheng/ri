{
  "version": "0.1.0",
  "history": {
    "logsDirectory": "session-logs",
    "maxRecordsPerFile": 1000,
    "retentionDays": 30,
    "trimDebounceMs": 30000,
    "autoTrim": true,
    "enableFiltering": true
  },
  "terminal": {
    "defaultShell": null,
    "fontSize": 14,
    "fontFamily": "Menlo, Monaco, \"Courier New\", monospace",
    "fontWeight": "400",
    "fontWeightBold": "700",
    "lineHeight": 1.0,
    "letterSpacing": 0,
    "cursorStyle": "block",
    "cursorBlink": true,
    "scrollback": 1000,
    "smoothScrollDuration": 0,
    "fastScrollModifier": "shift",
    "fastScrollSensitivity": 5,
    "scrollSensitivity": 1,
    "allowTransparency": false,
    "theme": {
      "name": "Gruvbox Dark",
      "background": "#282828",
      "foreground": "#ebdbb2",
      "cursor": "#ebdbb2",
      "cursorAccent": "#282828",
      "selectionBackground": "rgba(235, 219, 178, 0.25)",
      "black": "#282828",
      "red": "#cc241d",
      "green": "#98971a",
      "yellow": "#d79921",
      "blue": "#458588",
      "magenta": "#b16286",
      "cyan": "#689d6a",
      "white": "#a89984",
      "brightBlack": "#928374",
      "brightRed": "#fb4934",
      "brightGreen": "#b8bb26",
      "brightYellow": "#fabd2f",
      "brightBlue": "#83a598",
      "brightMagenta": "#d3869b",
      "brightCyan": "#8ec07c",
      "brightWhite": "#ebdbb2"
    }
  },
  "window": {
    "width": 1200,
    "height": 800,
    "alwaysOnTop": false,
    "sidebarCollapsed": false,
    "navigationWidth": 250
  },
  "ai": {
    "enabled": false,
    "provider": null,
    "apiKey": null,
    "model": null
  },
  "advanced": {
    "devToolsOnStartup": false,
    "enablePerformanceMonitoring": false,
    "logLevel": "info"
  },
  "notification": {
    "enabled": true,
    "channels": {
      "system": {
        "enabled": true
      },
      "inApp": {
        "enabled": true,
        "toastDuration": 3000
      },
      "slack": {
        "enabled": false,
        "webhookUrl": "",
        "channel": "#notifications",
        "username": "Second Brain OS",
        "iconEmoji": ":robot_face:"
      },
      "discord": {
        "enabled": false,
        "webhookUrl": "",
        "username": "Second Brain OS"
      },
      "telegram": {
        "enabled": false,
        "botToken": "",
        "chatId": ""
      },
      "dingtalk": {
        "enabled": false,
        "webhookUrl": "",
        "secret": ""
      },
      "wecom": {
        "enabled": false,
        "webhookUrl": ""
      }
    },
    "rules": {
      "notifyOnTypes": ["error", "warning", "success", "info"],
      "maxNotificationsPerSession": 3
    }
  },
  "opencode": {
    "enabled": false,
    "startServer": false,
    "startWeb": false,
    "startupDelay": 2000,
    "autoRestart": false,
    "logLevel": "INFO"
  },
  "fileManager": {
    "favorites": [],
    "showHidden": false,
    "sortBy": "name",
    "sortOrder": "asc"
  },
  "gateway": {
    "enabled": false,
    "url": "http://localhost:8080",
    "riID": "",
    "pollTimeout": 30000,
    "heartbeatInterval": 10000,
    "reconnectInterval": 1000,
    "maxReconnectDelay": 30000
  }
}
