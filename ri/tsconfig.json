{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"],
    "paths": {
      "@/*": ["./src/renderer/*"],
      "@electron/*": ["./electron/*"],
      "@test/*": ["./test/*"]
    }
  },
  "include": ["src/renderer/**/*", "vite.config.ts", "vitest.config.ts", "test/**/*", "src/**/__tests__/**/*"]
}
